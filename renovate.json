{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":automergeMinor",
    ":automergeBranch"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "commitMessageExtra": "from {{{displayFrom}}} to {{{displayTo}}}",
  "ignoreTests": true,
  "packageRules": [
    {
      "matchPackageNames": [],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process various dependencies",
      "managerFilePatterns": [
        "/.+\\.ya?ml$/",
        "/\\.ya?ml.j2$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\n.*?\"(?<currentValue>.*)\"\n",
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\n.*?-\\s(.*?)/(?<currentValue>[^/]+)/[^/]+\n",
        "datasource=(?<datasource>\\S+)\n.*?repo: (?<registryUrl>\\S+)\n.*?chart: (?<depName>\\S+)\n.*?version: (?<currentValue>\\S+)\n",
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( registryUrl=(?<registryUrl>\\S+))?\n.*?\"(?<currentValue>.*)\"\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "flux": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/\\.yaml(?:\\.j2)?$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml(?:\\.j2)?$/"
    ]
  }
}
